#!/bin/bash

postgresql_url="postgresql://$USER@$OPENSHIFT_GEAR_DNS:$OPENSHIFT_POSTGRESQL_DB_PROXY_PORT/"

echo "OPENSHIFT_POSTGRESQL_DB_GEAR_UUID=$OPENSHIFT_GEAR_UUID"
echo "OPENSHIFT_POSTGRESQL_DB_GEAR_DNS=$OPENSHIFT_GEAR_DNS"
echo "OPENSHIFT_POSTGRESQL_DB_USERNAME=$USER"
echo "OPENSHIFT_POSTGRESQL_DB_PASSWORD="
echo "OPENSHIFT_POSTGRESQL_DB_HOST=$OPENSHIFT_GEAR_DNS"
echo "OPENSHIFT_POSTGRESQL_DB_PORT=$OPENSHIFT_PGRLS_PUBLIC_PORT"
echo "OPENSHIFT_POSTGRESQL_DB_URL=$postgresql_url"

# Set these variables so /usr/bin/psql works properly
echo "PGHOST=$OPENSHIFT_POSTGRESQL_DB_GEAR_DNS"
echo "PGPORT=$OPENSHIFT_PGRLS_PUBLIC_PORT"
echo "PGUSER=$USER"
echo "PGPASSWORD="
echo "PGDATABASE=$OPENSHIFT_APP_NAME"

# version
echo "OPENSHIFT_POSTGRESQL_VERSION=$OPENSHIFT_POSTGRESQL_VERSION"

